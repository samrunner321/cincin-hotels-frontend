{
  "name": "cincinhotels",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' next build",
    "start": "next start",
    "lint": "next lint",
    "directus:dev": "docker-compose up -d",
    "directus:stop": "docker-compose down",
    "directus:prod": "docker-compose -f docker-compose.production.yml up -d",
    "directus:prod:stop": "docker-compose -f docker-compose.production.yml down",
    "directus:seed": "node scripts/seed-test-data.js",
    "directus:validate": "node scripts/validate-cms-config.js",
    "directus:mock": "node mock-directus/server.js",
    "import-sample-data": "node scripts/import-data.js",
    "backup-db": "docker exec cincinhotels_db pg_dump -U directus -d cincinhotels > ./backups/cincinhotels_$(date +%Y%m%d_%H%M).sql",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:visual": "playwright test --project=visual-regression",
    "test:e2e:report": "playwright show-report",
    "test:a11y": "playwright test e2e-tests/accessibility/ --project=chromium",
    "test:a11y:all": "playwright test e2e-tests/accessibility/ --project=chromium,firefox,webkit",
    "test:a11y:ci": "playwright test e2e-tests/accessibility/ --project=chromium --reporter=html,github",
    "test:a11y:report": "playwright show-report",
    "test:component": "jest",
    "test:component:watch": "jest --watch",
    "test:component:coverage": "jest --coverage",
    "test:api": "jest __tests__/api",
    "test:api:watch": "jest __tests__/api --watch",
    "test:api:reference": "cross-env RUN_REFERENCE_TESTS=true jest __tests__/api/hotel-api-reference.test.ts",
    "test:api:mock": "jest __tests__/api/hotel-api.test.ts",
    "export-directus-data": "node scripts/export-directus-data.js",
    "test:all": "npm run test:component && npm run test:api && npm run test:e2e && npm run test:a11y",
    "build:test": "node scripts/test-build.js",
    "build:test:server": "node scripts/build-test-server.js",
    "start:test": "cross-env NODE_ENV=production node scripts/build-test-server.js",
    "lighthouse": "lhci autorun",
    "showcase:setup": "npm run directus:dev && npm run import-sample-data",
    "showcase:start": "npm run directus:dev && npm run dev",
    "fix-imports": "node scripts/fix-alias-imports-enhanced.js",
    "fix-imports:dry": "node scripts/fix-alias-imports-enhanced.js --dry-run",
    "fix-imports:components": "node scripts/fix-alias-imports-enhanced.js --pattern @components",
    "fix-imports:single": "node scripts/fix-alias-imports-enhanced.js --single"
  },
  "dependencies": {
    "@directus/sdk": "^19.1.0",
    "clsx": "^2.1.0",
    "framer-motion": "^10.16.16",
    "joi": "^17.13.3",
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.16.0",
    "sharp": "^0.33.0",
    "swr": "^2.2.4",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.16",
    "axios": "^1.9.0",
    "commander": "^11.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "express": "^5.1.0",
    "form-data": "^4.0.0",
    "glob": "^10.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^1.3.5",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.32",
    "supertest": "^7.1.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5"
  }
}
